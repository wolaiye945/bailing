name: 百聆（bailing） 
version: 1.0

logging:
  level: debug

# 唤醒词
WakeWord: 百聆

Server:
  host: 0.0.0.0
  port: 15181

Security:
  enabled: true
  secret_key: bailing_secret_key_change_me
  users:
    - username: admin
      password: your_admin_password
      role: admin
    - username: user1
      password: your_user_password
      role: user

interrupt: true
# 降噪配置
NoiseReduction:
  enabled: false
  sample_rate: 16000
  control: 20
# 是否开启工具调用
StartTaskMode: true
# 智能意图截断 (EOQ) 配置
EOQ:
  enabled: true
  min_length: 2
  common_cmds: ["好", "行", "对", "不", "开", "关", "喂", "嗨", "在", "嗯"]
  filler_words: ["啊", "呢", "吧", "哦", "哒", "额", "呃", "哎", "就"]
  llm_judge: false # 暂不开启 LLM 语义判断，优先保证响应速度
# 具体处理时选择的模块
selected_module:
  Recorder: WebSocketRecorder
  ASR: FunASR
  VAD: SileroVAD
  LLM: OpenAILLM
  TTS: KOKOROTTS
  Player: WebSocketPlayer

Recorder:
  RecorderPyAudio:
    output_file: tmp/
  WebSocketRecorder:
    output_file: tmp/


ASR:
  FunASR:
    model_dir: FunAudioLLM/SenseVoiceSmall
    output_file: tmp/

VAD:
  SileroVAD:
    sampling_rate: 16000
    threshold: 0.8
    min_silence_duration_ms: 800  # 如果说话停顿比较长，可以把这个值设置大一些
  FunASRVAD:
    model_dir: iic/speech_fsmn_vad_zh-cn-16k-common-pytorch
    sampling_rate: 16000
    threshold: 0.5
    max_single_segment_time: 30000

LLM:
  OpenAILLM:
    model_name: your-model-name
    url: your-api-url
    api_key: your-api-key
    temperature: 0.1
    max_tokens: 1024
    top_p: 0.7
    presence_penalty: 0.2
    frequency_penalty: 0.3
  OllamaLLM:
    model_name: your-model-name
    url: your-api-url
    api_key: your-api-key
    temperature: 0.1
    max_tokens: 1024
    top_p: 0.7

TTS:
  MacTTS:
    voice: Tingting
    output_file: tmp/
  EdgeTTS:
    voice: zh-CN-XiaoxiaoNeural
    output_file: tmp/
  GTTS:
    lang: zh
    output_file: tmp/
  CosyvoiceTTS:
    output_file: tmp/
  CHATTTS:
    output_file: tmp/
  KOKOROTTS:
    output_file: tmp/
    lang: z
    voice: zf_001
    repo_id: hexgrad/Kokoro-82M-v1.1-zh

Player:
  PygameSoundPlayer: null
  PygamePlayer: null
  CmdPlayer: null
  PyaudioPlayer: null
  WebSocketPlayer: null

Rag:
  enabled: false
  doc_path: documents/
  emb_model: models/bge-small-zh
  model_name: deepseek-chat
  url: https://api.deepseek.com
  api_key: null

Memory:
  enabled: false
  dialogue_history_path: tmp/
  memory_file: tmp/memory.json
  model_name: deepseek-chat
  url: https://api.deepseek.com
  api_key: null
  max_history: 15 # 限制发送给大模型的对话历史轮数，减少延迟

TaskManager:
  enabled: true
  functions_call_name: plugins/function_calls_config.json
  aigc_manus_enabled: false

# 智能意图截断 (EOQ) 配置
EOQ:
  enabled: true
  min_length: 2
  common_cmds: ["好", "行", "对", "不", "开", "关", "喂", "嗨", "在", "嗯"]
  filler_words: ["啊", "呢", "吧", "哦", "哒", "额", "呃", "哎", "就"]
  llm_judge: false # 暂不开启 LLM 语义判断，优先保证响应速度
